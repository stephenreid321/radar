<table>
  <tr>
    <% [@word_frequency, @phrase2_frequency].each { |h| %>
    <td style="vertical-align: top">
      <ol>
        <% x = 2 %>
        <% h.sort_by { |w,f| -f }.first(100).each { |w,f| %>
        <li>
          <a href="javascript:;" onclick="
        var a = this;
        $(a).parent().remove();
        $.post('/tags', {name: '<%=w%>'});
        "
        class="text-contrast" title="<%= f %>" style="font-size: <%= em = f.to_f / x; em > 2 ? 2 : em %>em">  <%= w %>   </a>
          <label class="d-none badge badge-primary"><%=f%></label>
        </li>
        <% } %>
      </ol>
    </td>
    <% } %>
  </tr>
</table>
